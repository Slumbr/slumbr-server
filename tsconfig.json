{
  "compilerOptions": {
    "module":"commonjs",
    "target": "es2017",
    "lib": ["es5", "es6"],
    "jsx": "react",
    "rootDir": "src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "moduleResolution":"Node",
    "strict": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "types": [
    "react",
    "react-dom",
    "react-native"
  ],
  "exclude":[
    "build",
    "App.js",
    "src/app/secrets",
    "node_modules",
    "__tests__",
    "jest.config.js"

  ],
  "compileOnSave": false
}
